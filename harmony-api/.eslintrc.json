{
  "extends": "./node_modules/gts/",
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "node/no-unpublished-import": [
      "error",
      {
        "allowModules": ["supertest", "jest-mock-extended"]
      }
    ],
    "prefer-arrow-callback": ["error", { "allowNamedFunctions": true }],
    "func-style": ["error", "expression", { "allowArrowFunctions": true }]
  }
}
