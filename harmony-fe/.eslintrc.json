{
  "extends": "./node_modules/gts/",
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "node/no-unpublished-import": [
      "error",
      {
        "allowModules": [
          "msw",
          "@testing-library/react",
          "@testing-library/jest-dom"
        ]
      }
    ],
    "node/no-unsupported-features/es-syntax": [
      "error",
      { "ignores": ["modules"] }
    ]
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
